    <div id="worksheet" class="sheet-container">
        <header class="text-center pb-4 border-b-2 border-gray-400">
            <h1 class="text-3xl font-bold text-gray-800">Calculus I: Differentiation Rules</h1>
            <h2 class="text-lg text-gray-600">A Quick Reference Guide</h2>
        </header>

        <main class="mt-8">
            <!-- Basic Differentiation Rules -->
            <div class="rule-section">
                <h3 class="rule-title">Core Differentiation Rules</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                    <div><strong>Power Rule</strong><div class="formula">$$\frac{d}{dx} (x^n) = nx^{n-1}$$</div></div>
                    <div><strong>Constant Rule</strong><div class="formula">$$\frac{d}{dx} (c) = 0$$</div></div>
                    <div><strong>Sum/Difference Rule</strong><div class="formula">$$\frac{d}{dx} [f(x) \pm g(x)] = f'(x) \pm g'(x)$$</div></div>
                    <div><strong>Constant Multiple</strong><div class="formula">$$\frac{d}{dx} [c \cdot f(x)] = c \cdot f'(x)$$</div></div>
                </div>
            </div>

            <!-- Advanced Differentiation Rules -->
            <div class="rule-section">
                <h3 class="rule-title">Advanced Differentiation Rules</h3>
                <div>
                    <p class="font-semibold">Product Rule</p>
                    <div class="formula mb-4">$$\frac{d}{dx} [f(x)g(x)] = f'(x)g(x) + f(x)g'(x)$$</div>
                </div>
                 <div>
                    <p class="font-semibold">Quotient Rule</p>
                    <div class="formula mb-4">$$\frac{d}{dx} \left[\frac{f(x)}{g(x)}\right] = \frac{f'(x)g(x) - f(x)g'(x)}{[g(x)]^2}$$</div>
                </div>
                <div>
                    <p class="font-semibold">Chain Rule</p>
                    <div class="formula">$$\frac{d}{dx} [f(g(x))] = f'(g(x)) \cdot g'(x)$$</div>
                </div>
            </div>

            <!-- Common Derivatives -->
            <div class="rule-section">
                <h3 class="rule-title">Common Derivatives</h3>
                <div class="grid-container">
                    <!-- Exponential & Logarithmic -->
                    <div class="subsection">
                        <h4 class="font-semibold text-lg mb-2 text-gray-700">Exponential & Logarithmic</h4>
                        <div class="space-y-3">
                            <div class="formula">$$\frac{d}{dx} (e^x) = e^x$$</div>
                            <div class="formula">$$\frac{d}{dx} (a^x) = a^x \ln(a)$$</div>
                            <div class="formula">$$\frac{d}{dx} (\ln(x)) = \frac{1}{x}$$</div>
                            <div class="formula">$$\frac{d}{dx} (\log_a(x)) = \frac{1}{x \ln(a)}$$</div>
                        </div>
                    </div>
                    <!-- Trigonometric -->
                    <div class="subsection">
                        <h4 class="font-semibold text-lg mb-2 text-gray-700">Trigonometric</h4>
                        <div class="space-y-3">
                            <div class="formula">$$\frac{d}{dx} (\sin x) = \cos x$$</div>
                            <div class="formula">$$\frac{d}{dx} (\cos x) = -\sin x$$</div>
                            <div class="formula">$$\frac{d}{dx} (\tan x) = \sec^2 x$$</div>
                             <div class="formula">$$\frac{d}{dx} (\cot x) = -\csc^2 x$$</div>
                             <div class="formula">$$\frac{d}{dx} (\sec x) = \sec x \tan x$$</div>
                             <div class="formula">$$\frac{d}{dx} (\csc x) = -\csc x \cot x$$</div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
